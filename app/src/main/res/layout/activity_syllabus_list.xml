<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Syllabus_List_Activity">

    <ScrollView
        android:id="@+id/scrlvw1"
        android:layout_width="410dp"
        android:layout_height="645dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo1"
                app:layout_constraintStart_toStartOf="@id/cons1"
                app:layout_constraintTop_toTopOf="@id/cons1"
                app:srcCompat="@drawable/ldrp" />

            <TextView
                android:id="@+id/tv11"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="SYLLABUS"
                android:textColor="@color/black"
                android:textSize="@dimen/_30sdp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@id/imageView2"
                app:layout_constraintVertical_bias="1.0" />



            <TextView
                android:id="@+id/tv31"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Link for syllabus are provided below"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@id/tv11"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/tv41"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="left|center"
                android:text="DEPARTMENTS:"
                android:textColor="@color/black"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@id/tv31"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/tv51"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="center"
                android:text="@string/ldrplink"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@id/tv41"
                app:layout_constraintVertical_bias="1.0" />
            <TextView
                android:id="@+id/tv61"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="center"
                android:text="@string/ldrplink2"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@id/tv51"
                app:layout_constraintVertical_bias="1.0" />
            <TextView
                android:id="@+id/tv71"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="center"
                android:text="@string/ldrplink3"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@id/tv61"
                app:layout_constraintVertical_bias="1.0" />
            <TextView
                android:id="@+id/tv81"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="center"
                android:text="@string/ldrplink3"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@id/tv71"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/tv91"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="center"
                android:text="@string/ldrplink4"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@id/tv81"
                app:layout_constraintVertical_bias="1.0" />
            <TextView
                android:id="@+id/tv101"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="center"
                android:text="@string/ldrplink5"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@id/tv91"
                app:layout_constraintVertical_bias="1.0" />
            <TextView
                android:id="@+id/tv111"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="center"
                android:text="@string/ldrplink6"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@id/tv101"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>